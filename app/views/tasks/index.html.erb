<h1 class="py-2">My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <%= check_box("task", task.id, {checked: task.completed}) %>
      <%= link_to task.title, task_path(task.id) %> - <%= link_to "🗑️", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "➕ Add a new task", new_path, :class => "btn btn-outline-primary" %>
